<Window x:Class="WayOfLifeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conway Game of Life - Ronald Meijboom" Height="800" Width="1310"  
        Closed="Window_Closed" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Background="Black">
    <Grid>
        <Grid Name="GameOfLifeGrid" HorizontalAlignment="Left" Height="720" Margin="10,10,0,0" VerticalAlignment="Top" Width="1280" />
        <Button Name="StartButton" HorizontalAlignment="Left" Margin="88,735,0,0" VerticalAlignment="Top" Width="115" Height="25" Content="Start" Click="ButtonStart_Click" />
        <Button Name="ResetButton" HorizontalAlignment="Left" Margin="267,735,0,0" VerticalAlignment="Top" Width="115" Height="25" Content="Reset" Click="ButtonReset_Click"/>
    </Grid>
</Window>
